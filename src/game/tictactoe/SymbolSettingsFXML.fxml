<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="symbol" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.tictactoe.Settings">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="110.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="110.0" />
    </columnConstraints>
     <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Button GridPane.halignment="CENTER" id="settingButton" text="Cross" GridPane.rowIndex="1" onAction="#handleSymbolCrossButton"/>
        <Button GridPane.halignment="CENTER" id="settingButton" text="Circle" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#handleSymbolCircleButton"/>
        <Label  GridPane.halignment="CENTER" id="opponentText" text="What symbol do you want to play with?" GridPane.columnSpan="3" />
    </children>
</GridPane>
